            const input = document.getElementById(`inputid`);

            input.addEventListener("paste", function(e) {
                e.preventDefault();
                const text = e.clipboardData.getData(`text`);
                const isValid = !isNaN(text);
                if(isValid) input.value = text;
                isEnabled();
            });

            document.addEventListener(`keydown`, (event) => {
                const btnnn3 = document.getElementById("search")
                if(event.key == `Enter` && input == document.activeElement) {
                    redirect()
                    btnnn3.innerHTML = `<div class="lds-ring"><div></div><div></div><div></div><div></div></div> Loading...`
                    btnnn3.style.opacity = '0.5'
                    btnnn3.style.pointerEvents = 'none'
                };
            });

            function isEnabled() {
                const button = document.getElementById(`search`);
                button.disabled = input.value == `` || input.value.length < 2;
            }

            function redirect() {
                const input = document.getElementById(`inputid`);
                if(document.getElementById(`search`).disabled || input.value == `` || input.value.length < 2) return;
                window.location.pathname = `/user/${input.value}`;
            }
