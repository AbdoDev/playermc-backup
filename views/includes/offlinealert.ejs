<div class="toast-container position-fixed top-0 end-0 p-3">
    <div id="liveToast" class="toast bg-dark" role="alert" aria-live="assertive" aria-atomic="true">
      <div  class="bg-dark toast-header">
        <strong class="me-auto text-white-50"> PlayerMC</strong>
        <small class="text-white-50">Just Now</small>
        <button type="button" style="filter: invert(1) grayscale(100%) brightness(200%);" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
      </div>
      <div id="txtof" class="toast-body">
      </div>
    </div>
  </div>

  <script>
    const toastLiveExample = document.getElementById('liveToast')

    const toastBootstrap = bootstrap.Toast.getOrCreateInstance(toastLiveExample)
    const txt = document.getElementById('txtof')
    window.addEventListener('offline', () => {
        txt.innerText = "You are offline, Please check your connection!"
        toastBootstrap.show()
    })
    window.addEventListener('online', () => {
        txt.innerText = "Connection Restored!"
        toastBootstrap.show()
    })
  </script>
